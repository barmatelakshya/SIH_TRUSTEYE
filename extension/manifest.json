{
  "manifest_version": 3,
  "name": "TrustEye",
  "version": "1.0.0",
  "description": "Advanced scam detection with real-time threat analysis",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content.js"],
    "run_at": "document_end"
  }],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "TrustEye - Phishing Protection"
  },
  

  
  "web_accessible_resources": [{
    "resources": ["src/*"],
    "matches": ["<all_urls>"]
  }]
}
